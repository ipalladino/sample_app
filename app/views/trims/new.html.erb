<% provide(:title, 'New Trim') %>
<h1>Add new trim</h1>

<div class="row">
  <div class="span6 offset3">
      <%= form_tag trims_path do %>
          
          <%= label_tag :car_trim, "Trim" %>
          <%= text_field_tag :car_trim %>
        
          <%= label_tag :year_selection, "Year" %>
          <%= select_tag :year_selection, options_from_collection_for_select(@years, :id, :car_year) , :prompt => "Years" %>
          
          <div id="car_model">
            
          </div>
          
          <%= submit_tag "New Trim", class: "btn btn-large btn-primary", style: "position:relative;top:10px;" %>

      <% end %>
  </div>
</div>