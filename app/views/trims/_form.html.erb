<%= form_for(@trim) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :car_trim %>
    <%= f.text_field :car_trim %>

    <% if(@trim.new_record?) %>
            <%= f.submit "Create", class: "btn btn-large btn-primary" %>
    <% else %>
        <%= f.submit "Edit", class: "btn btn-large btn-primary" %>
    <% end %>
<% end %>