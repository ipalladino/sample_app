<%= form_for(@transmission) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <% if(@transmission.new_record?) %>
            <%= f.submit "Create", class: "btn btn-large btn-primary" %>
    <% else %>
        <%= f.submit "Edit", class: "btn btn-large btn-primary" %>
    <% end %>
<% end %>