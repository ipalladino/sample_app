<% provide(:title, 'New Model') %>
<h1>Add new Ferrari Model</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@carmodel, :html => { :multipart => true }) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :car_model %>
      <%= f.text_field :car_model %>
      
      <%= f.label :year_id %>
      <%= f.select :year_id, options_from_collection_for_select(Year.all, :id, :car_year) , {:include_blank => true, :default => nil} %>
      
      <div class="newPaperclipFiles">

        <%= f.fields_for :generic_images do |asset| %>

            <% if asset.object.new_record? %>
                <%= asset.file_field :image %>
            <% end %>

        <% end %>

      </div>

      <div class="existingPaperclipFiles">

      <%= f.fields_for :generic_images do |asset| %>

          <% unless asset.object.new_record? %>

              <div class="thumbnail">
                <%= link_to( image_tag(asset.object.image.url(:thumb)), asset.object.image.url(:original) ) %>
                <%= asset.check_box :_destroy %>
              </div>

          <% end %>        

      <% end %>
      </div>
      
      
      <%= f.submit "Add new model", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>