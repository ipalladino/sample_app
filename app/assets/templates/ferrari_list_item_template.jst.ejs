<div class="ferrari-line span12">
    <div class="span12 details">
        <div class="span4 thumbnails">
          <img src="<%= assets_urls[0].modal %>" >
        </div>
        <div class="span8 ferrari-list-details">
            <div id="top-row">
                <div id="left-col">
                    Year:
                </div>
                <div id="mid-col">
                    <%= car_year_str %>
                </div>
                <div id="right-col">
                    Contact Buyer
                </div>
            </div>
            <div id="mid-row">
                <div id="left-col">
                    Model:
                </div>
                <div id="mid-col">
                    <%= car_model_str %>
                </div>
                <div id="right-col">
                    Share on
                    <span id="facebookbtn-link" class="share-button facebook" href="http://www.facebook.com/sharer/sharer.php?u=http://scuderia.herokuapp.com/ferraris/<%= id %>"><i class="icon-facebook"></i></span>
                    <span id="twitterbtn-link" class="share-button twitter" href="http://twitter.com/share?text=Check out this Ferrari <%= car_model_str %> from <%= car_year_str %>&hashtags=scuderia,ferrari&url=http://scuderia.herokuapp.com/ferraris/<%= id %>"><i class="icon-twitter"></i></span>
                </div>
            </div>
            <div id="bot-row">
                <div id="left-col">
                    Description:
                </div>
                <div id="desc-col">
                    <%= description %>
                </div>
            </div>
        </div>
    </div>
</div>